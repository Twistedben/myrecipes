<%= render 'shared/page_title', title: 'Create a new recipe' %>
<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title"><!--  This h2 will be for the error testing in recipes_test.rb -->
             <%= pluralize(@recipe.errors.count, "error") %> <!-- First show the number of errors, then if > 1 add an 's' to error  -->
              prohibited this <%= @recipe.class %> from being saved:
          </h2>
          <div class="panel-body"> <!-- This is the second element for the test run  -->
             <ul>
            <% @recipe.errors.full_messages.each do |msg|  %>
            <!--  Now run through and display each error -->
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 

<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %> <!-- "f" being the do block iterator, and ":name" being our recipe's name attribute  -->
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps of Recipe" %>
        </div>
      </div>  
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %> <!-- class "btn-xlarge makes it green -->
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to Recipes Listing", recipes_path %> ]
    </div>
  </div>
</div>


