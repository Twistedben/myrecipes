<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>
<% if @chef.recipes.count != 0 %>
  <h4 align="center"><%= @chef.chefname %>'s recipes</h4>
  <div align="center">
    <%= will_paginate @chef_recipes %> <!-- Here we define that we want to paginate the @chef_recipes 
  instance variable in our chefs_controller instead of the defaulted @chef defined in the Show action-->
  </div> <!-- Below, we also sent in the obj: as @chef_recipes instead of the whole list -->
  <%= render 'recipes/recipe', obj: @chef_recipes %>
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %> 
  <h4 align="center">No recipes yet!</h4>
<% end %>

















